CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -pedantic
all: $(NAME)
o.%: %.c
	$(CC) $(CFLAG) -c -o $@ $<
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: fclean all
.PHONY: all oclean fclean all re
